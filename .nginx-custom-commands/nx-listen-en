#!/bin/bash
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

counter=1
for file in /etc/nginx/sites-enabled/*; do
    echo -e "\n############################### [$counter] ###############################"
    echo -e "##\033[36;1m         $file \033[m"
    echo -e "###################################################################"
    grep -E "(listen)" $file | grep -v "^\s*#"
    counter=$((counter+1))
done
echo ""

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
