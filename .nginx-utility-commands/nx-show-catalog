#!/bin/bash
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

_DEF="\x1b[0m"
_RED="\x1b[31m"
_GRN="\x1b[32m"
_ORG="\x1b[33m"
_BLU="\x1b[34m"
_MGT="\x1b[35m"
_CYN="\x1b[36m"

_ZZ=${_ORG}
_PP=${_CYN}

echo ""
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo ":: [1] 인자 없음"
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo -e "${_ZZ} nx-t         ${_DEF}- Nginx Config 유효성 평가"
echo -e "${_ZZ} nx-stat      ${_DEF}- Nginx 서비스 상태 확인"
echo -e "${_ZZ} nx-status    ${_DEF}- Nginx 서비스 상태 확인"
echo -e "${_ZZ} nx-reload    ${_DEF}- Nginx 재시작"
echo -e ""
echo -e "${_ZZ} nx-av        ${_DEF}- /etc/nginx/sites-available/ 경로로 이동"
echo -e "${_ZZ} nx-en        ${_DEF}- /etc/nginx/sites-enabled/ 경로로 이동"
echo -e ""
echo -e "${_ZZ} nx-ls        ${_DEF}- /etc/nginx/sites-available/ 내에 있는 파일들 목록 출력"
echo -e "${_ZZ} nx-ls-en     ${_DEF}- /etc/nginx/sites-enabled/   내에 있는 파일들 목록 출력"
echo -e ""
echo -e "${_ZZ} nx-catall    ${_DEF}- /etc/nginx/sites-available/ 내에 있는 파일들 요약 내용 모두 출력"
echo -e "${_ZZ} nx-catall-en ${_DEF}- /etc/nginx/sites-enabled/   내에 있는 파일들 요약 내용 모두 출력"
echo -e ""
echo -e "${_ZZ} nx-listen    ${_DEF}- /etc/nginx/sites-available/ 내에 있는 파일들 listen 내용만 모두 출력"
echo -e "${_ZZ} nx-listen-en ${_DEF}- /etc/nginx/sites-enabled/   내에 있는 파일들 listen 내용만 모두 출력"
echo -e ""
echo -e "${_ZZ} nx-ps        ${_DEF}- sudo ps -alef"
echo -e "${_ZZ} nx-net       ${_DEF}- sudo netstat -nltp"
echo -e ""
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo ":: [2] 인자 1개"
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo -e "${_ZZ} nx-gen     ${_PP}{파일명} ${_DEF}- 새로운 *.conf 파일을 sites-available에 생성"
echo -e "${_ZZ} nx-cat     ${_PP}{파일명} ${_DEF}- sites-available 내에 있는 파일을 cat으로 출력"
echo -e "${_ZZ} nx-catc    ${_PP}{파일명} ${_DEF}- 파일 내용의 코멘트를 제거하여 cat으로 출력"
echo -e "${_ZZ} nx-cath    ${_PP}{파일명} ${_DEF}- 파일 내용에 하이라이트를 적용하여 cat으로 출력"
echo -e "${_ZZ} nx-catch   ${_PP}{파일명} ${_DEF}- 파일 내용의 코멘트를 제거하고 하이라이트를 적용하여 cat으로 출력"
echo -e "${_ZZ} nx-cathc   ${_PP}{파일명} ${_DEF}- 파일 내용의 코멘트를 제거하고 하이라이트를 적용하여 cat으로 출력"
echo -e ""
echo -e "${_ZZ} nx-edit    ${_PP}{파일명} ${_DEF}- /etc/nginx/sites-available/ 내에 있는 파일을 nano로 편집"
echo -e "${_ZZ} nx-nano    ${_PP}{파일명} ${_DEF}- /etc/nginx/sites-available/ 내에 있는 파일을 nano로 편집"
echo -e "${_ZZ} nx-ln      ${_PP}{파일명} ${_DEF}- sites-available 내에 있는 파일을 sites-enabled에 링크 생성"
echo -e "${_ZZ} nx-link    ${_PP}{파일명} ${_DEF}- sites-available 내에 있는 파일을 sites-enabled에 링크 생성"
echo -e ""
echo -e "${_ZZ} nx-rm      ${_PP}{파일명} ${_DEF}- sites-available, sites-enabled 내에서 파일 제거"
echo -e "${_ZZ} nx-rm-en   ${_PP}{파일명} ${_DEF}- sites-enabled 내에 있는 링크만 제거"
echo -e "${_ZZ} nx-rm-link ${_PP}{파일명} ${_DEF}- sites-enabled 내에 있는 링크만 제거"
echo -e ""
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo ":: [3] 인자 2개"
echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
echo -e "${_ZZ} nx-gen-redirect-port ${_PP}{출발 포트} {목적지 포트} ${_DEF}- 포트 단순 리다이렉트 등록(ln 까지 등록)"
echo ""

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
